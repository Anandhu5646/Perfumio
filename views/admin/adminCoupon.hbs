<div class="container mt-5" style="margin-top: 80px; background-color: rgb(255, 255, 255);margin-left: 6rem;margin-right: 6rem;" >
    <div class="mt-5">
        <a href="/admin/addCoupon" class="btn btn-success mb-3 mt-3">Add New
            Coupon</a>
    </div>
    <table class="table table-hover" id="myTable">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Coupon Name</th>
                <th scope="col">code</th>
                <th scope="col">Date</th>
                <th scope="col">Minimum Amount</th>
                <th scope="col">Discount</th>
                <th scope="col">Discount %</th>
                <th scope="col">Stock</th>
                <th scope="col">Edit</th>
                <th scope="col">Status</th>
                <th scope="col">action</th>
            </tr>
        </thead>
        <tbody>
            {{#each coupons}}
            <tr>
                <th scope="row">{{inc @index}}</th>
                <td>{{this.name}}</td>
                <td>{{this.code}}</td>
                <td>{{this.expiry}}</td>
                <td>{{this.minAmount}}</td>
                <td>{{this.discount}}</td>
                <td>{{this.discountperct}}</td>
                <td>{{this.stock}}</td>
                <td><a href="/admin/editCoupon/{{this._id}}" class="btn btn-success">Edit</a>
                </td>
                <td>{{#if this.block}}
                    <p>Blocked</p>
                    {{else}}
                    <p>Active</p>
                    {{/if}}
                </td>

                <td>

            <div class="dropdown-container"  tabindex="-1">
              <div class="three-dots "></div>
              <div class="dropdown" >
              
                {{#if this.block}}
                <button
                  onclick="if( confirm(' Are you sure to unlist coupon?')){window.location.href='/admin/unblockCoupon/{{this._id}}' }"
                  class="btn  btn-outline-success btn-block mb-4" style="margin-left: 70px;">List</button>
                {{else}}
                <button
                  onclick="if( confirm(' Are you sure to Unlist coupon?')){window.location.href='/admin/blockCoupon/{{this._id}}' }"
                  class="btn btn-outline-danger btn-block mb-4" style="margin-left: 70px;">Unlist</button>
                {{/if}}

              </div>
            </div>



          </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
   
