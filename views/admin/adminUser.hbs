<div style="overflow: scroll;">
    <table class="table" style="margin-top: 20px;">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Mobile Number</th>
          <th scope="col">status</th>
          <th scope="col">action</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
        <tr>

          <td>{{inc @index}}</td>
          <td>{{this.name}}</td>
          <td>{{this.email}}</td>
          <td>{{this.mobile}}</td>
          <td>{{#if this.block}}
          <p>Blocked</p>
          {{else}}
          <p>Active</p>
          {{/if}}
          </td>
          <td>
            {{#if this.block}}
            <button onclick="if( confirm(' Are you sure to unblock user?')){window.location.href='/admin/unblock/{{this._id}}' }"
              class="btn btn-success btn-block mb-4">Unblock</button>
            {{else}}
            <button onclick="if( confirm(' Are you sure to block user?')){window.location.href='/admin/block/{{this._id}}' }"
              class="btn btn-danger btn-block mb-4">Block</button>
            {{/if}}
            
          </td>

          </td>

        </tr>
        {{/each}}

      </tbody>
    </table>
