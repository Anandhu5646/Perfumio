<section class=" "
  style="height: max-content; background: rgb(2,0,36);
      background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(166,178,228,0.3982843137254902) 0%, rgba(197,213,214,1) 100%);">
  <form action="/admin/updateCoupon" method="post"  >
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card text-white" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">

              <div class="pb-5">
                {{#if error}}
                <span class="alert alert-dismissible alert-danger " role="alert"> {{message}}
                  {{/if}}


                </span>
              </div>

              <h2 class="fw-bold mb-5 text-dark text-uppercase">Edit Orders</h2>


              <input type="text" name="_id" placeholder="Product name" value="{{orders._id}}"
                    class="form-control form-control-lg"  style="visibility: hidden;"/>
              <div class="form-outline mb-4">
                <div class="form-outline form-white mb-5">
                  <input type="text" name="name" placeholder="Product name" value="{{orders.address.name}}"
                    class="form-control form-control-lg" required />
                </div>
                <div class="form-outline form-white mb-5">
                  <input type="text" name="name" placeholder="Coupon code" value="{{orders.products.name}}"
                    class="form-control form-control-lg" required />
                </div>
                <div class="form-outline form-white mb-5">
                  <input type="date" name="orderDate" placeholder="date" value="{{orders.orderDate}}"
                    class="form-control form-control-lg" required />
                </div>
                
                <div class="form-outline form-white mb-4">
                  <input type="text" name="address" placeholder="Min Amount" value="{{orders.address.address}}"
                    class="form-control form-control-lg" required />
                </div>
                <div class="form-outline form-white mb-4">
                  <input type="number" name="pincode" placeholder="discount" value="{{orders.address.pincode}}"
                    class="form-control form-control-lg" required />
                </div>
                 <div class="form-outline form-white mb-4">
                  <input type="number" name="mobile" placeholder="discount" value="{{orders.address.mobile}}"
                    class="form-control form-control-lg" required />
                </div>
                 <div class="form-outline form-white mb-4">
                  <input type="number" name="totalPrice" placeholder="discount" value="{{orders.totalPrice}}"
                    class="form-control form-control-lg" required />
                </div>
                <div class="form-outline form-white mb-4">
                  <input type="number" name="payment" placeholder="discount" value="{{orders.payment}}"
                    class="form-control form-control-lg" required />
                </div>

               

                <button class="btn btn-outline-success btn-lg px-5" type="submit">Submit</button>

              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </form>


</section>


