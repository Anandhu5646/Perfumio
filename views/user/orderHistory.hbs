<div class="container mt-5">
    <div style="text-align: center;"><h3> Order List</h3></div>
    <table class="table table-hover" id="myTable">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Order ID</th>
                <th scope="col">Image</th>
                <th scope="col">Product Name</th>
                
                <th scope="col">Quantity</th>
                <th scope="col">Total Amount</th>
                <th scope="col">Status</th>
                
                <th scope="col">Details</th>
                
            </tr>
        </thead>
        <tbody>
            {{#each orders}}
            <tr>
                <th scope="row">{{inc @index}}</th>
                <td>{{this._id}}</td>
                 <td><img src="/pic/{{this.products.image.filename}}" style="width: 40px;height: 50px;"></td>
                <td>{{this.products.name}}</td>
                <td>{{this.quantity}}</td>
                <td>{{this.totalPrice}}</td>
                <td>{{this.status}}</td>
                
                <td><a href="/productView/{{this._id}}" class="btn btn-dark">View</a>
                </td>
            </tr>   
            {{/each}}
        </tbody>
    </table>
   
</div>
              
                