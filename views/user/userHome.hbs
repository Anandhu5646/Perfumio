<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/user/userHome.css" />
    <link rel="stylesheet" type="text/css"
        href="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.4/dist/sweetalert2.min.css">
    <title>Document</title>
</head>

<body>


    <script src="https://kit.fontawesome.com/3b1ca000cb.js"></script>

    <header>
        <nav>
            <div class="logo " style="width: 100%; color: rgb(252, 252, 252);padding-top: 35px;">
                <h1>Perfumio</h1>
            </div>
            <form action="/search" method="post">
                <div class="search__bar__header mt-4">
                    <input type="text" placeholder="Search" name="name"
                        style="border-bottom-left-radius: 20px;border-top-left-radius: 20px;height: 25px;">
                    <button
                        style="border-bottom-right-radius: 20px;border-top-right-radius: 20px;height: 27px;background-color: aliceblue;width: 2rem;"
                        type="submit">
                        <img style="width: 1rem;height: 1rem;" src="/images/search-30.png" alt="">
                    </button>
                </div>
            </form>
            <div class="cart__header__desktop " style="color: white;">
                <a href="/wishlist" style="text-decoration: none;padding-top: 25px;"><img
                        src="/images/icons8-heart-32.png" alt=""></a>
                <a onclick="cart" href="/cart"><img src="/images/icons8-shopping-cart-64.png"
                        style="width: 2rem;height: 2rem;margin-left: 1rem;margin-top: 25px;" alt=""></a>
            </div>

            <div class="main__navigations pt-2">
                <div class="main__navigations__div">
                    <ul class="main__navigations__div__ul">
                        <li class="main__navigations__div__li on__mobile_d_none" style="font-weight: bold;"><a
                                href="">Home</a></li>
                        <li class="main__navigations__div__li on__mobile_d_none">
                            <a class="categ" style="font-weight: bold;">Categories <i class="fas fa-caret-down"></i></a>
                            <div class="div__categories__items">
                                <p><a href="/men">Men</a></p>
                                <p><a href="/women">Women</a></p>
                            </div>
                        </li>
                        <li class="main__navigations__div__li">
                            {{#unless Login }}
                            <a href="/login" class="anchor__remains__same"
                                style="padding-bottom: 0;font-weight: bold;">Login <i class="fas fa-sign-out-alt"></i>
                            </a>
                            {{else}}
                            <div class="dropdown-center login_button">
                                <button class="btn btn-black dropdown-toggle "
                                    style="color: aliceblue;margin-top: -5px;font-weight: bold; " type="button"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    {{Login}}
                                </button>
                                <ul class="dropdown-menu " style="color: aliceblue;background-color: grey;">
                                    <li><a class="dropdown-item" href="/profile">Profile</a></li>
                                    <li><a class="dropdown-item" href="/logout">Logout</a></li>
                                </ul>
                            </div>
                            {{/unless}}
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container text-center  " style="padding-top: 150px;">
        <div class="row align-items-start">
            <div class="col-3 left-img">
                <a href="/women"><img src="/images/homeleftimg.webp" class="d-block w-100 " alt="left img"></a>
                <div class="d-flex justify-content-center">
                    <a href="/women"><button type="button"
                            class="btn btn-danger button-left btn-sm btn-lg-md">Women</button></a>
                </div>
            </div>
            <div class="col-6">
                <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/images/carousel1.webp" class="d-block w-100" alt="first pic">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/carousel2.webp" class="d-block w-100" alt="second pic">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/carousel3.webp" class="d-block w-100" alt="third pic">
                        </div>

                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="col-3 right-img">
                <a href="/men"><img src="/images/homerightimg.webp" class="d-block w-100 " alt="home right img"></a>
                <div class="d-flex justify-content-center">
                    <a href="/men">
                        <p type="button" class="btn btn-danger  button-right btn-sm btn-lg-md">Men</p>
                    </a>
                </div>
            </div>
        </div>
    </div>


    <!--Main layout-->
    <main>

        <div class="container pt-5">


            <a href="/allProducts"><button class="btn btn-light " type="button">
                    All products
                </button></a>

            <section class=" text-center mb-4">
                <!--Grid row-->
                <div class="row">
                    {{#each products}}
                    {{#unless this.block}}
                    <div class="col-lg-3 col-md-6 col-sm-6 col-6">
                        <div class="col-12" style="cursor: pointer;">
                            <div class="wsk-cp-product">
                                <div class="wsk-cp-img"><a href="pdtdetails/{{this._id}}"><img
                                            src="/pic/{{this.image.filename}}"
                                            style="border-top-left-radius: 15px; border-top-right-radius: 15px;"
                                            alt="Product" class="img-responsive" /></a></div>
                                <div class="wsk-cp-text">
                                    <div class="category">

                                        <span><a href="pdtdetails/{{this._id}}">{{this.sub}}</a></span>

                                    </div>
                                    <div class="title-product">
                                        <h3>{{this.name}}</h3>
                                    </div>
                                    <div class="sub-category">
                                        <h5>{{this.category}}</h5>
                                    </div>
                                    <div class="card-footer">
                                        <div class="wcf-left"><span class="price">{{this.price}}&#8377;</span></div>
                                        <div style="margin-left: 5px;" class="wcf-right"><a
                                                href="/addtocart/{{this._id}}" class="buy-btn"><img
                                                    style="width:14px ;height: 18px;margin-top: 8px;"
                                                    src="/images/icons8-add-shopping-cart-48.png" alt=""></a></div>
                                        <div class="wcf-right "><a href="/addToWishlist/{{this._id}}"
                                                class="buy-btn "><img style="width:14px ;height: 18px;margin-top: 8px;"
                                                    src="/images/icons8-heart-26.png" alt=""></a></div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/unless}}
                    {{/each}}
                </div>
                <!--Grid row-->
            </section>

            <!--Section: Products v.3-->

            <!--Pagination-->
            <div class="col-lg-12">
                <nav aria-label="Page navigation example">
                    <ul class="pagination" style="justify-content: center;">
                        {{#each pagination}}
                        <li class="page-item {{#ifEquals ../page this}}active{{/ifEquals}}">
                            <a class="page-link" href="/?page={{this}}" style="color: black;">
                                {{this}}
                            </a>
                        </li>
                        {{/each}}
                    </ul>
                </nav>
            </div>
            <!--Pagination-->

        </div>
    </main>
    <!--Main layout-->

    <!--Footer-->
    <footer class="page-footer text-center font-small mt-4 wow fadeIn">

        <!--Call to action-->
        <div class="pt-4">
            <a class="btn btn-outline-white" href="https://mdbootstrap.com/docs/jquery/getting-started/download/"
                target="_blank" role="button">Contact
                <i class="fas fa-download ml-2"></i>
            </a>
            <a class="btn btn-outline-white" href="https://mdbootstrap.com/education/bootstrap/" target="_blank"
                role="button">Perfumio
                <i class="fas fa-graduation-cap ml-2"></i>
            </a>
        </div>
        <!--/.Call to action-->

        <hr class="my-4">

        <!-- Social icons -->
        <div class="pb-4">
            <a href="#" target="_blank">
                <i class="fab fa-facebook-f mr-3"></i>
            </a>

            <a href="#" target="_blank">
                <i class="fab fa-twitter mr-3"></i>
            </a>

            <a href="#" target="_blank">
                <i class="fab fa-youtube mr-3"></i>
            </a>

            <a href="http://perfumio.online" target="_blank">
                <i class="fab fa-google-plus-g mr-3"></i>
            </a>
        </div>
        <!-- Social icons -->

        <!--Copyright-->
        <div class="footer-copyright py-3">
            Â© 2023 Copyright:
            <a href="" target="_blank"> perfumio.online</a>
        </div>
        <!--/.Copyright-->

    </footer>
    <!-- Modal -->

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.4/dist/sweetalert2.min.js"></script>

    <!-- Your JavaScript code -->

    <script>
        // Function to show the sweet alert notification
        function showSweetAlert() {
            Swal.fire({
                icon: 'success',
                title: 'Added to wishlist!',
                showConfirmButton: false,
                timer: 1500
            });
        }
    </script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!--/.Footer-->
    <script>new WOW().init();</script>
    <script>$(".bars").click(() => {
            $(".mobile__nav__fade__and__show__circle").toggleClass("open");
            $(".mobile__nav__fade__and__show").toggleClass("open");
            $(".bars").toggleClass("toggle")

        })</script>
</body>

</html>