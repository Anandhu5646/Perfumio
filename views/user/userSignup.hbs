<section class="vh-100" style="background: rgb(2,0,36);
background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(166,178,228,0.3982843137254902) 0%, rgba(197,213,214,1) 100%);">
  <div class="container py-5 h-100 ">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="https://perfumesheaven.in/image/cache/catalog/slider/dior-620x500h.jpg.webp"
                alt="login form" class="img-fluid mt-5" style="border-radius: 1rem 1rem 1rem 1rem;height:85%; margin-left: 20px; " />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">

                <form action="/signup" method="post">

                  <div class="d-flex align-items-center mb-3 pb-1">
                    
                    <span class="h1 fw-bold mb-0">Aura Scents</span>
                  </div>

                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Signup</h5>
                  <p class="text-danger" style="font-size: 15px;"> {{fillError}}</p>
                  <div class="form-outline mb-4">
                    <input type="username" name="name" id="form2Example37" class="form-control form-control-lg"  placeholder="Username" required/>
                    
                  </div>
                   <p class="text-danger" style="font-size: 15px;"> {{message}}</p>
                  <div class="form-outline mb-4">
                    <input type="email" name="email" id="form2Example27" class="form-control form-control-lg" placeholder="Email" required/>
                    {{!-- <label class="form-label" for="form2Example27">Password</label> --}}
                  </div>

                  <div class="form-outline mb-4">
                    <input type="mobilenumber" name="mobile" id="form2Example27" class="form-control form-control-lg" placeholder="Mobile number" required/>
                  </div>

                  <div class="form-outline mb-4">
                    <input type="password" name="password" id="form2Example27" class="form-control form-control-lg" placeholder="Password" required/>
                  </div>

                  <div class="pt-1 mb-4">
                    <button class="btn btn-dark btn-lg btn-block" type="submit">Register</button>
                  </div>

                 
                  <p class="mb-5 pb-lg-2" style="color: #393f81;">Already Registered? <a href="/login"
                      style="color: #393f81;">Login here</a></p>
                  
                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>