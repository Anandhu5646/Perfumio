  <title></title>
  <style>
        .sidebar {

            width: 100vw;
            height: 100vh;
            position: fixed;
            top: 0px;
            left: 0px;
            z-index: 900;
            transition: .3s;
            left: -1000px;
        }

        .sidebar-container {
            background-color: #000000;
            display: flex;
            flex-direction: column;
            width: 60%;
            height: 100%;
            gap: 10px;
            padding: 10px;
            justify-content: space-between;
        }

        .side-items {
            height: 50px;
            display: flex;
            gap: 20px;
            align-items: center;
            color: white;
            background-color: #6a6a6a;
            padding-left: 10px;
            border-radius: 10px;
        }

        .side-sec-1 {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }
        .sidebar-icon{
            display: flex;
            justify-content:space-around;
        }
    </style>
</head>

<body>



  <header>
        <nav>
            <div class="logo d-none d-sm-none d-md-block"
                style="width: 100%; color: rgb(252, 252, 252);padding-top: 35px;padding-left: 100px;">
                <a href="/"><h1>Perfumio</h1></a>
            </div>
            <div class=" d-sm-block d-md-none"
                style="width: 100%; color: rgb(252, 252, 252);padding-top: 35px;padding-left: 20px;margin-right: 20px;">
                <a href="/"><h1>Perfumio</h1></a>
            </div>


            <div class="sidebar d-sm-block d-md-none" id="sidebar" >
                <div class="sidebar-container">
                    <div class="side-sec-1">

                        <div class="p-1">
                            <h4 class="text-white"><i class="ri-menu-2-line me-3"
                                    onclick="closeSidebar()"></i><span><a href="/">Perfumio</a> </span> </h4>
                        </div>
                        <a href="/" class="side-items">Home</a>
                        <a href="/wishlist" class="side-items">Wishlist</a>
                        <a href="/cart" class="side-items">Cart</a>
                        <a href="/profile" class="side-items">Profile</a>
                        {{!-- <a class="side-items">Wishlist</a>
                        <a class="side-items">Wishlist</a> --}}
                    </div>
                    <div class="side-sec-2">
                        <a href="/logout" class="side-items"><i class="ri-logout-circle-r-line me-2"></i>Logout</a>

                    </div>
                </div>
            </div>

            <div class="d-none d-sm-none d-md-block">
                <form action="/search" method="post">
                    <div class="search__bar__header mt-4">
                        <input type="text" placeholder="Search" name="name"
                            style="border-bottom-left-radius: 20px;border-top-left-radius: 20px;height: 25px;">
                        <button
                            style="border-bottom-right-radius: 20px;border-top-right-radius: 20px;height: 27px;background-color: aliceblue;width: 2rem;"
                            type="submit">
                            <img style="width: 1rem;height: 1rem;" src="/images/search-30.png" alt="">
                        </button>
                    </div>
                </form>
            </div>


            <div class="d-sm-block d-md-none">
                <form action="/search" method="post">
                    <div class="search__bar__header mt-4" style="width: 170px;padding-left: 10px;margin-left: 40px;">
                        <input type="text" placeholder="Search" name="name"
                            style="border-bottom-left-radius: 20px;border-top-left-radius: 20px;height: 25px;">
                        <button
                            style="border-bottom-right-radius: 20px;border-top-right-radius: 20px;height: 27px;background-color: aliceblue;width: 2rem;"
                            type="submit">
                            <img style="width: 1rem;height: 1rem;" src="/images/search-30.png" alt="">
                        </button>
                    </div>
                </form>

            </div>


            <div class="cart__header__desktop d-none d-sm-none d-md-block" style="color: white;margin-top: 35px;">
                <div> <a href="/wishlist" style="text-decoration: none;margin-top: 35px;"><img
                            src="/images/icons8-heart-32.png" alt=""></a></div>
                <div style="margin-top: -30px;margin-left: 5rem;"><a onclick="cart" href="/cart"><img
                            src="/images/icons8-shopping-cart-64.png" style="width: 2rem;height: 2rem;" alt=""></a>
                </div>

            </div>



            <div class="main__navigations pt-2">
                <div class="main__navigations__div">
                    <ul class="main__navigations__div__ul">
                        <li class="main__navigations__div__li on__mobile_d_none" style="font-weight: bold;"><a
                                href="">Home</a></li>
                        <li class="main__navigations__div__li on__mobile_d_none">
                            <a class="categ" style="font-weight: bold;">Categories <i class="fas fa-caret-down"></i></a>
                            <div class="div__categories__items">
                                <p><a href="/men">Men</a></p>
                                <p><a href="/women">Women</a></p>
                            </div>
                        </li>
                        <li class="main__navigations__div__li">
                            {{#unless Login }}
                            <a href="/login" class="anchor__remains__same"
                                style="padding-bottom: 0;font-weight: bold;">Login <i class="fas fa-sign-out-alt"></i>

                            </a>
                            
                            {{else}}
                           
                                <div class="dropdown-center login_button">
                                    <button class="btn btn-black dropdown-toggle "
                                        style="color: aliceblue;margin-top: -5px;font-weight: bold; " type="button"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                        {{Login}}
                                    </button>
                                    <ul class="dropdown-menu " style="color: aliceblue;background-color: grey;">
                                        <li><a class="dropdown-item" href="/profile">Profile</a></li>
                                        <li><a class="dropdown-item" href="/logout">Logout</a></li>
                                    </ul>
                                </div>
                            {{/unless}}
                        </li>
                        <i onclick="openSidebar()" class="fa fa-bars d-md-none" style="padding-right: 30px;padding-top: 10px;color: #6a6a6a;"></i>
                    </ul>
                </div>
            </div>
        </nav>
    </header>




  <div class="profile-main" style="margin-top: 150px;">

    <div class="container pt-5">

      <div class="row">
        <div class="col-12 col-md-6">
          <div class="profile-container">
            <h4>General</h4>
            <div class="profil-row">
              <b>Name : </b><span>{{addressDet.address.[0].name}}</span>
            </div>
            <div class="profil-row">
              <b>Mob No : </b><span>{{addressDet.address.[0].mobile}}</span>
            </div>

            <div class="profil-row">
              {{!-- <button onclick="window.location.href='/edit-profile/{{users.address.address_id}}'">Edit</button> --}}
              <a href="/logout">
                <button>Logout</button>

              </a>
            </div>
          </div>
          <div class="porfile-items">
            <a href="/cart" class="profile-item">
              <b>Cart</b>
              <i class="ri-shopping-cart-line mx-2"></i>
            </a>
          </div>
          <div class="porfile-items">
            <a href="/wishlist" class="profile-item">
              <b>Wishlist</b>
              <i class="ri-heart-line mx-2"></i>
            </a>
          </div>
          <div class="porfile-items">
            <a href="/orders" class="profile-item">
              <b>Order History</b>
              <i class="ri-shopping-bag-2-line mx-2"></i>
            </a>
          </div>

          <div class="row"></div>
        </div>
        <div class="col-12 col-md-6">

          {{#unless addAddress}}
          <div class="manage-profile-address pt-3">
            <div class="d-flex justify-content-around">
              <h4>Manage address </h4>
              {{#unless maxAddress}}
              <a href="/addAddress" class="btn btn-dark rounded-4 ">Add Address</a>
              {{/unless}}
            </div>
            {{#each addressDet.address}}
            <div class="manage-address-row">
              <div class="man-ad-left">
                <b>{{this.name}}</b>
                <b>{{this.mobile}} </b>
                <b>{{this.address}}</b>
                <b>PIN:{{this.pincode}}</b>
              </div>
              <div class="man-ad-right">
                <a href="/deleteAddress/{{this.id}}">
                  <i class="ri-delete-bin-5-line"></i>
                </a>

                <a href='/editAddress/{{this.id}}'><i class="ri-edit-box-line"></i></a>
              </div>
            </div>
            {{/each}}



          </div>
          {{else}}

          <div class="container">
            <div class="row mx-0 justify-content-center">
              <div class="col-md-7 col-lg-5 px-lg-2 col-xl-4 px-xl-0 px-xxl-3 " style="width: 65%;">


              </div>
            </div>
          </div>

          {{/unless}}
        </div>
      </div>
    </div>
  </div>
