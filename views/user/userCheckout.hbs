                                        <form action="/placeOrder" method="post">

                                            <div class="row">



                                                {{#each users.address}}
                                                <div class="col-md-6">
                                                    <div class="address-box"
                                                        style="border: 1px solid rgb(51, 51, 51);margin-bottom: 12px; padding: 10px; border-radius: 10px; font-size: 12px;">

